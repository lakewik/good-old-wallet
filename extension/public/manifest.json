{
  "manifest_version": 3,
  "name": "good-old-wallet",
  "version": "1.0.0",
  "description": "A simple wallet from the Good Old Days, no chain fragmentation in sight, just tokens on Ethereum.",
  "icons": {},
  "action": {
    "default_popup": "popup.html",
    "default_icon": {}
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": ["corgi.png", "corgi-running.gif", "filecoin.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "https://guppy-saving-mistakenly.ngrok-free.app/*",
    "http://localhost:*/*",
    "https://calib2.ezpdpz.net/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3001/*",
      "http://localhost:*/*",
      "https://guppy-saving-mistakenly.ngrok-free.app/*"
    ]
  }
}
